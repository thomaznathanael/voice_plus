<meta>
	<info author="TaelPower" version="1.1" name="Voice Plus" description="This resource implements a voice chat where only nearby players can talk to eachother" type="script" />

	<min_mta_version server="1.3.0-0.04570"/>

	<settings>
		<setting name="*max_voice_distance" value="[25]"/>
		<setting name="*voice_sound_boost" value="[6]"/>
		<setting name="*show_talking_icon" value="[true]"/>
	</settings>

	<file src="faction-roger.mp3"/>
	<file src="police-roger.mp3"/>
	<file src="ring.png"/>
	<file src="ring-radio.png"/>

	<script src="shared.lua" type="shared"/>
	<script src="client.lua" type="client"/>
	<script src="server.lua" type="server"/>

	<export function="voice_plus_call" type="server"/>
	<export function="voice_plus_hangup" type="server"/>
	<export function="voice_plus_radio" type="server"/>
	<export function="voice_plus_radio_off" type="server"/>
	<export function="voice_plus_set_radio_tx" type="server"/>
	<export function="voice_plus_private" type="server"/>
	<export function="voice_plus_private_off" type="server"/>
</meta>
